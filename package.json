{
  "name": "node-desktop-app-template",
  "version": "1.0.0",
  "description": "Simple Node.js Desktop Application Template using Electron and Bootstrap",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": "https://github.com/majikarp/node-desktop-app-template",
  "keywords": [],
  "author": "GitHub",
  "license": "CC0-1.0",
  "dependencies": {
    "bootstrap": "4.2.1",
    "docxtemplater": "^3.16.3",
    "ejs": "^3.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "jquery": "3.3.1",
    "nodemon": "^2.0.2",
    "pizzip": "^3.0.6",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "browser-sync": "2.26.3",
    "electron": "^4.2.12",
    "gulp": "4.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "node_desktop_app_template"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
